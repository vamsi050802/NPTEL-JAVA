import java.util.Scanner;
public class Exercise1_3 {
       public static void main(String[] args) {
	   Scanner sc = new Scanner(System.in);
	   int n=sc.nextInt();
	  int sum=0;
       int count = 0;
        while (count < n)
        {
            int nextEven = 2 * count;

          
            if (nextEven % 3 == 0)
            {
                sum += nextEven;
            }

            count++;
        }

       
        System.out.print(sum);
        }
}
